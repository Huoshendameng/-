/* components/get-progress/get-progress.wxss */
.single {
  font-size: 30rpx;
}
.single radio-group {
  display: flex;
  flex-flow: column nowrap;
}
.single radio-group > label {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: relative;
  min-height: 110rpx;
  justify-content: flex-start;
  line-height: 42rpx;
}
.single radio-group > label radio {
  margin-right: 20rpx;
}
.single radio-group > label > image {
  width: 96rpx;
  height: 96rpx;
  border: 2rpx solid #f0f0f8;
  border-radius: 8rpx;
  margin: 20rpx 20rpx 20rpx 0;
}
.single radio-group > label > text {
  min-width: 80rpx;
  word-break: break-all;
  padding: 20rpx 0;
}
.single radio-group > label > input {
  border-bottom: #c3c7d3 2rpx solid;
  width: 70%;
  height: 60rpx;
}
.single radio-group > label:after {
  content: ' ';
  height: 2rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #f0f0f8;
  left: 80rpx;
}
.single radio-group > label:last-of-type:after {
  display: none;
}
.single radio-group > label.full:after {
  left: 0rpx;
}
